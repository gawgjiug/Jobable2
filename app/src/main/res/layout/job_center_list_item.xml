<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/job_center_itemView"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="90dp"
        android:layout_height="150dp">

        <ImageView
            android:src="@drawable/job_center_default"
            android:id="@+id/job_imageArea"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="150dp">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="15dp"
            android:id="@+id/job_nameArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"/>

        <TextView
            android:id="@+id/maximum_people"
            android:text="정원"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/current_people"
            android:text="현재 인원"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <TextView
            android:layout_margin="15dp"
            android:id="@+id/tel_Area"
            android:text="010-****-****"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
</LinearLayout>
