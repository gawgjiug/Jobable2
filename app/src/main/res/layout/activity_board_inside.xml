<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".board.BoardInsideActivity"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@drawable/radius_g"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/titleArea"
                    android:text="title"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center"/>

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/boardSettingicon"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:src="@drawable/main_menu"
                    android:layout_margin="10dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="0.5dp">

        </LinearLayout>




        <LinearLayout
            android:layout_marginTop="30dp"
            android:background="@drawable/radius_g"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="4">

            <ImageView
                android:background="@drawable/radius_g"
                android:src="@drawable/board_pay"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/payArea"
                android:text="pay"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <ImageView
                android:background="@drawable/radius_g"
                android:src="@drawable/board_job"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/categoryArea"
                android:text="categori"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">


            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:text="시급"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:text="업무"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>




        <LinearLayout
            android:background="@drawable/radius_g"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="4">

            <ImageView
                android:background="@drawable/radius_g"
                android:src="@drawable/board_day"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>



            <TextView
                android:id="@+id/dayArea"
                android:text="day"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <ImageView
                android:background="@drawable/radius_g"
                android:src="@drawable/board_time"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


            <TextView
                android:id="@+id/timeArea"
                android:text="time"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">


            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:text="기간(주)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:text="시간(일)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <TextView

            android:id="@+id/textAread"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/radius_g"
            android:padding="10dp"
            android:text="내용 영역"
            android:textColor="@color/black" />

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/getImageArea"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_margin="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:weightSum="2">

        <Button
            android:id="@+id/board_mp3_btn"
            android:text="설명 듣기"
            android:background="@drawable/radius"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:visibility="invisible"
            />


        <Button
            android:layout_margin="15dp"
            android:visibility="invisible"
            android:text="지원 접수"
            android:background="@drawable/radius"
            android:id="@+id/applyjobBtn"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
</layout>