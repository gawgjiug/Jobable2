        android:layout_height="match_parent"/>

    <TextView

        android:id="@+id/sexTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView

        android:id="@+id/typeTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
